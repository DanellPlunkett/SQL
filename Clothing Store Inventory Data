--CREATE A CLOTHING STORE DATABASE

CREATE TABLE Inventory (id INTEGER PRIMARY KEY, item TEXT, stock INTEGER, costprice INTEGER, saleprice INTEGER);
INSERT INTO Inventory VALUES (1, "TOP1", 5, 5, 30);
INSERT INTO Inventory VALUES (2, "TOP2", 8, 4, 20);
INSERT INTO Inventory VALUES (3, "TOP3", 7, 5, 25);
INSERT INTO Inventory VALUES (4, "TOP4", 3, 2, 18);
INSERT INTO Inventory VALUES (5, "TOP5", 7, 3, 20);
INSERT INTO Inventory VALUES (6, "SHORT1", 4, 5, 30);
INSERT INTO Inventory VALUES (7, "SHORT2", 6, 6, 34);
INSERT INTO Inventory VALUES (8, "SHORT3", 2, 3, 20);
INSERT INTO Inventory VALUES (9, "SHORT4", 4, 4, 25);
INSERT INTO Inventory VALUES (10, "SHORT5", 6, 5, 28);
INSERT INTO Inventory VALUES (11, "PANTS1", 3, 7, 40);
INSERT INTO Inventory VALUES (12, "PANTS2", 6, 10, 50);
INSERT INTO Inventory VALUES (13, "PANTS3", 2, 12, 45);
INSERT INTO Inventory VALUES (14, "PANTS4", 5, 10, 55);
INSERT INTO Inventory VALUES (15, "PANTS5", 7, 13, 65);

-- DISPLAY ITEMS ORDERED BY PRODUCTION COST

SELECT item FROM Inventory GROUP BY costprice;

-- WHAT IS THE TOTAL STOCK OF ALL INVENTORY?

SELECT SUM(stock) FROM Inventory;

-- WHAT IS THE TOATL COST OF CURRENTY INVENTORY?

SELECT SUM(costprice) FROM Inventory;

-- WHAT IS THE AVERAGE SALE PRICE OF ITEMS THAT COST $5 OR LESS TO MAKE?

SELECT AVG(saleprice) FROM inventory WHERE costprice <=5;
